<%= form_for(@cooperator, html: { class: 'form-horizontal' }) do |f| %>
  <% if @cooperator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cooperator.errors.count, "error") %> prohibited this cooperator from being saved:</h2>

      <ul>
      <% @cooperator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nickname, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nickname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:role, @possible_roles.map { |role| [ role, role ] }, class: 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>
